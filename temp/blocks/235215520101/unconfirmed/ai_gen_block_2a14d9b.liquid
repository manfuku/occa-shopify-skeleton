{% doc %}
  @prompt
    show 4 latest products
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-latest-products-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-latest-products-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-latest-products-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 32px;
  }

  .ai-latest-products-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
  }

  .ai-latest-products-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-latest-product-card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
  }

  .ai-latest-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    background-color: #f4f4f4;
    margin-bottom: 12px;
  }

  .ai-latest-product-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-latest-product-card-{{ ai_gen_id }}:hover .ai-latest-product-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-latest-product-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .ai-latest-product-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-latest-product-info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .ai-latest-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0;
    font-weight: 500;
  }

  .ai-latest-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
  }

  .ai-latest-product-compare-price-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-right: 8px;
  }

  @media screen and (max-width: 989px) {
    .ai-latest-products-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-latest-products-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-latest-products-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-latest-products-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-latest-products-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <div class="ai-latest-products-header-{{ ai_gen_id }}">
        <h2 class="ai-latest-products-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      </div>
    {% endif %}

    <div class="ai-latest-products-grid-{{ ai_gen_id }}">
      {% assign latest_products = collections.all.products | sort: 'created_at' | reverse %}
      {% for product in latest_products limit: 4 %}
        <a href="{{ product.url }}" class="ai-latest-product-card-{{ ai_gen_id }}">
          <div class="ai-latest-product-image-wrapper-{{ ai_gen_id }}">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="ai-latest-product-image-{{ ai_gen_id }}"
                loading="lazy"
                width="600"
                height="600"
              >
            {% else %}
              <div class="ai-latest-product-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          <div class="ai-latest-product-info-{{ ai_gen_id }}">
            <h3 class="ai-latest-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
            <div class="ai-latest-product-price-{{ ai_gen_id }}">
              {% if product.compare_at_price > product.price %}
                <span class="ai-latest-product-compare-price-{{ ai_gen_id }}">
                  {{ product.compare_at_price | money }}
                </span>
              {% endif %}
              <span>{{ product.price | money }}</span>
            </div>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Latest products",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Latest products"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 8,
      "max": 48,
      "step": 4,
      "unit": "px",
      "label": "Grid gap",
      "default": 20
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Image border radius",
      "default": 8
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Columns on mobile",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "2"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 32
    },
    {
      "type": "range",
      "id": "product_title_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Product title size",
      "default": 16
    },
    {
      "type": "range",
      "id": "product_price_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Product price size",
      "default": 14
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "product_title_color",
      "label": "Product title color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "product_price_color",
      "label": "Product price color",
      "default": "#333333"
    }
  ],
  "presets": [
    {
      "name": "Latest products"
    }
  ]
}
{% endschema %}
